@font-face
  font-family "Avenir Next"
  src url("/assets/AvenirNext-Regular.ttf")

@font-face
  font-family "Gill Sans"
  src url("/assets/GillSans.ttf")

h1
h2
h3
h4
h5
h6
  text-align center
  font-family "Gill Sans", sans-serif
  font-weight 100

h1
  font-size 300%
h2
  font-size 250%
h3
  font-size 200%
h4
  font-size 150%
h5
  font-size 133.334%
h6
  font-size 116.667%
p
  text-align center
  color #93a1a1
  // color #586e75
  // color #dc322f
  font-size 1.25em
  line-height 1.666em

*
  color #dc322f
  font-family "Avenir Next", sans-serif

a
  color #dc322f

.border
  margin 0.5em
  padding 0.5em
  border 0.25em solid #586e75

.btn
.btn-lg
  border-radius 0

.center
  margin 0 auto
  text-align center

.left
  text-align left

.nav-text
  font-size 1.5em

.nav-border
  padding-right 0.125em
  border-right 0.25em solid #586e75
